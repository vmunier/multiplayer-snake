# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# Home page
GET    /                             controllers.Application.index

GET    /test                         controllers.Application.test

GET    /games                        controllers.Application.games

POST   /games                        controllers.Application.createGame

GET    /games/:uuid                  controllers.Application.game(uuid: java.util.UUID)

GET    /games/:uuid/ws               controllers.Application.joinGame(uuid: java.util.UUID)

GET    /assets/javascripts/game.js   controllers.Application.gameJs(uuid: java.util.UUID)

# Map static resources from the /public folder to the /assets URL path
GET    /assets/*file                 controllers.Assets.at(path="/public", file)
